{{> addedit/header}}

<div class="boxcontainer">
    <video id="bg-vid" autoplay loop muted src="/public/vid/banner.mp4"></video>
    <div class="bg-trans"></div>
    {{#if message}}
    <div class="flash-message">
        <p style="margin: 10px 0; color: {{message.color}}; text-align:center;">
            {{message.message}}
        </p>
    </div>
    {{/if}}
    <div class="box" style="height: 65%; width: 50%">
        <h1>{{title}}</h1>
        <form id="edit-form" action="/add-musics" method="post" enctype="multipart/form-data">
            <div class="left">
                <div class="file-input-group text-start">
                    <div id="preview-thumbnail"></div>
                    <input type="file" hidden id="file" name="image" onchange="handleChange()" />
                    <label id="attach" for="file"><i class="fas fa-paperclip"></i> Attach Your Thumbnail
                    </label>
                </div>
            </div>
            <div class="right">
                <label for="title">Music Title</label>
                <input type="text" id="title" name="title" />
                <label for="music">Start Career</label>
                <input type="file" id="music" name="music" accept="audio/mp3" style="color: white; margin-top: 10px;" />
            </div>
        </form>
        <div class="button">
            <button id="btn-update" form="edit-form" type="submit">Add Music</button>
            <button id="btn-cancel" onclick="window.location.href='/musics'">
                Back
            </button>
        </div>
    </div>
</div>
</div>

<script>
    function handleChange() {
        let previewElement = document.getElementById('preview-thumbnail')
        const value = URL.createObjectURL(event.target.files[0])
        previewElement.innerHTML = `<img src="${value}" style="max-width:250px; max-height: 250px;" />`
    }
</script>

{{> addedit/footer}}