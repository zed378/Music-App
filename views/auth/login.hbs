{{> home/loghead}}

<body>
    <div class="container">
        <video id="bg-vid" autoplay loop muted src="/public/vid/banner.mp4"></video>
        <div class="bg-trans"></div>
        <div class="cardForm">
            <img src="/public/images/logo.svg" alt="" />

            {{#if message}}
            <div class="flash-message">
                <p style="margin: 10px 0; color: {{message.color}}; text-align:center;">
                    {{message.message}}
                </p>
            </div>
            {{/if}}

            <form action="/login" method="post">
                <label for="email">Email</label><br />
                <input type="email" id="email" name="email" />
                <br /><br />
                <label for="password">Password</label><br />
                <input type="password" name="password" id="password" /><br /><br />
                <button type="submit">LOGIN</button><br /><br />
                <div class="a">
                    <a href="/register">Don't have account, Register!</a><br /><br />
                    <a href="/"><i class="fas fa-chevron-circle-left"></i> Back to Home</a>
                </div>
            </form>
        </div>
    </div>

    {{> home/footer}}