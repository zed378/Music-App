{{> admin/header}}

{{> admin/sidebar}}

{{> admin/navbar}}

<div class="main-panel">
    <div class="content-wrapper under">
        <div class="row">
            <div class="col-xl-4 col-sm-6 grid-margin stretch-card">
                <img class="img-fluid" src="{{user.image}}" alt="">
            </div>
            <div class="col-xl-4 col-sm-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body text-center pt-5 p-3">
                        <h1 class="mt-5 mb-2">{{user.name}}</h1>
                        <h4>{{user.email}}</h4>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-sm-6 grid-margin stretch-card">
                <div class="card p-3">
                    <div class="text-center">
                        <h3>Summary</h3>
                    </div>
                    <p>{{user.summary}}</p>
                </div>
            </div>
        </div>
        <a href="/edit-profile">
            <button class="btn btn-outline-primary btn-block">Edit Profile</button>
        </a>
    </div>
</div>

{{> admin/footer}}