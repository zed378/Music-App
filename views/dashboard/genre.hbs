{{> admin/header}}

{{> admin/sidebar}}

{{> admin/navbar}}

<div class="main-panel">
    <div class="content-wrapper">
        <button class="btn btn-outline-primary btn-md mb-3" onclick="window.location.href='/add-genre'"><i
                class="mdi mdi-plus"></i> Add Genre</button>
        <div class="row">
            {{!-- genre template --}}
            {{#each genre}}
            <div class="col-xl-3 col-sm-6 grid-margin">
                <div class="card p-3">
                    <div class="text-center mb-2">
                        <h3>{{this.name}}</h3>
                    </div>
                    <div class="genre-btn">
                        <a href="/edit-genre/{{this.id}}"><button type="button" class="btn btn-info">Edit</button></a>
                        <a href="/delete-genre/{{this.id}}"><button type="button"
                                class="btn btn-danger">Delete</button></a>
                    </div>
                </div>
            </div>
            {{/each}}
            {{!-- end of template --}}
        </div>
    </div>
</div>

{{> admin/footer}}